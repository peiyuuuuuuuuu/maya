doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src='https://kit.fontawesome.com/bdf4d726ef.js' crossorigin='anonymous')
        link(rel="stylesheet", href="main.css")        
        title RUSUME
        style.
          html, body {
            overflow: hidden;
          }
          .wrapper {
            width: 100%;
            height: 100vh;
            display: grid;
            grid-template-rows: 6em 1fr 7em;
          }

          main {
            grid-row: 2 / 3;
            margin-top: 0;
            overflow-y: auto;
            padding: 2rem;
          }

          p {
            line-height: 1rem;
            margin-bottom: 2rem;
          }

          .footer {
            grid-row: 3 / 4;
          }
    body
      .wrapper
        include layout/header.pug
        //- flex
        //- .main-wrapper
        //-   main
        //-   include layout/footer.pug
        
        //- grid
        main
          

        include layout/footer.pug